{% extends 'layout.twig' %}
{% block title %}Edit Expense{% endblock %}
{% block content %}
    <h1 class="text-2xl font-bold mb-4">Edit Expense</h1>
    <section class="mb-8">
        {# TODO: customize the form below as needed, make sure to populate with edited expense values #}
        <form action="/expenses/{{ expense.id }}" method="POST" class="max-w-sm mx-auto">
            <div class="mb-4 flex items-center">
                <label for="date" class="w-24 text-gray-300 font-bold">Date:</label>
                <input type="date" id="date" name="date" required
                       value="{{ expense.date|date('Y-m-d') }}"
                       max="{{ "now"|date("Y-m-d") }}"
                       class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">
                {% if errors.date %}<p class="text-red-500">{{ errors.date }}</p>{% endif %}
            </div>
            <div class="mb-4 flex items-center">
                <label for="category" class="w-24 text-gray-300 font-bold">Category:</label>
                {# TODO: populate with configured expense categories instead of the mock values #}
                <select id="category" name="category" required
                        class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">
                   {% for cat in categories %}
                <option value="{{ cat }}" {% if expense.category == cat %}selected{% endif %}>{{ cat }}</option>
                   {% endfor %}
                </select>
            </div>
            <div class="mb-4 flex items-center">
                <label for="amount" class="w-24 text-gray-300 font-bold">Amount:</label>
                <input type="number" id="amount" name="amount" step="0.01" required
                       value="{{ (expense.amountCents / 100)|number_format(2, '.', '') }}"
                       class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">
                    {% if errors.amount %}<p class="text-red-500">{{ errors.amount }}</p>{% endif %}
            </div>
            <div class="mb-6 flex items-start">
                <label for="description" class="w-24 text-gray-300 font-bold mt-2">Description:</label>
                <textarea id="description" name="description" rows="2"
                          class="flex-1 shadow appearance-none border rounded py-2 px-3 bg-gray-700 text-gray-100 leading-tight focus:outline-none focus:shadow-outline">{{ expense.description }}</textarea>
                    {% if errors.description %}<p class="text-red-500">{{ errors.description }}</p>{% endif %}
            </div>
            <div class="flex justify-end">
                <button type="submit"
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Update
                </button>
            </div>
        </form>
    </section>
{% endblock %}